#!/usr/bin/env node

require('coffee-script/register');
var CLI = require('../lib/cli'),
    cli = new CLI;

cli.emitter.on('data', function(data){
  console.log(data.green);
});

cli.emitter.on('err', function(err){
  console.error("ERROR: ".red + err);
  process.exit(64);
});

cli.run(process.argv.slice(2));
